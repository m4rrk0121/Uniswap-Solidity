const provider = new ethers.providers.JsonRpcProvider('https://mainnet.base.org');

// Specify decimals for both tokens
const CHIDO_DECIMALS = 18; // Assuming CHIDO has 18 decimals, verify this
const USDC_DECIMALS = 18;

const path2 = [
   '0xF31e6D62BFC485857af2186eB3d8ee94b4379feD',
   '0x4200000000000000000000000000000000000006',
]

const router = new ethers.Contract(
    uniswapRouterAddress,
    abi,
    provider,
);

const main = async () => {
    try {
        const amounts = [
            ethers.utils.parseUnits('100000', CHIDO_DECIMALS),
            ethers.utils.parseUnits('1000000', CHIDO_DECIMALS),
            ethers.utils.parseUnits('10000000', CHIDO_DECIMALS),
            ethers.utils.parseUnits('100000000', CHIDO_DECIMALS),
            ethers.utils.parseUnits('200000000', CHIDO_DECIMALS),
            ethers.utils.parseUnits('205000000', CHIDO_DECIMALS),
        ];

        let lastSellPrices = new Array(amounts.length).fill(null);
        let lastBuyPrices = new Array(amounts.length).fill(null);
        let priceChanged = false;

        while (true) {
            priceChanged = false;
            for (let i = 0; i < amounts.length; i++) {
                const amount = amounts[i];
                
                // Sell price calculation
                const sellResult = await router.getAmountsOut(amount, path2);
                const sellInputAmount = ethers.utils.formatUnits(sellResult[0], CHIDO_DECIMALS);
                const sellOutputAmount = ethers.utils.formatUnits(sellResult[1], USDC_DECIMALS);
                const sellPrice = parseFloat((sellOutputAmount / sellInputAmount).toFixed(15));
                
                // Buy price calculation
                const buyPath = [...path2].reverse();
                const buyResult = await router.getAmountsIn(amount, buyPath);
                const buyInputAmount = ethers.utils.formatUnits(buyResult[0], USDC_DECIMALS);
                const buyOutputAmount = ethers.utils.formatUnits(buyResult[1], CHIDO_DECIMALS);
                const buyPrice = parseFloat((buyInputAmount / buyOutputAmount).toFixed(15));

                // Check if price has changed
                if (lastSellPrices[i] === null || lastBuyPrices[i] === null ||
                    Math.abs(sellPrice - lastSellPrices[i]) > 0.000000001 ||
                    Math.abs(buyPrice - lastBuyPrices[i]) > 0.000000001) {
                    priceChanged = true;
                }

                lastSellPrices[i] = sellPrice;
                lastBuyPrices[i] = buyPrice;
            }

            // Only print if price has changed
            if (priceChanged) {
                console.log('Price change detected. Current prices:');
                for (let i = 0; i < amounts.length; i++) {
                    const sellInputAmount = ethers.utils.formatUnits(amounts[i], CHIDO_DECIMALS);
                    console.log(`SELL - ETH Price for ${parseFloat(sellInputAmount).toLocaleString()} CHIDO: ${lastSellPrices[i].toFixed(15)}`);
                    console.log(`BUY  - ETH Price for ${parseFloat(sellInputAmount).toLocaleString()} CHIDO: ${lastBuyPrices[i].toFixed(15)}`);
                    console.log('---');
                }
            }

            // Wait for 5 seconds before next check
            await new Promise(resolve => setTimeout(resolve, 5000));
        }
    } catch (error) {
        console.error('Error:', error.message);
    }
}

main().catch(error => {
    console.error('Unhandled error:', error);
    process.exit(1);
});
